{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "pavlovelykyi/client",
      "hostname": "client",
      "essential": false,
      "memory" : 128
    },
    {
      "name": "worker",
      "image": "pavlovelykyi/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory" : 128
    },
    {
      "name": "server",
      "image": "pavlovelykyi/multi-sever",
      "hostname": "api",
      "essential": false,
      "memory" : 128
    },
    {
      "name": "nginx",
      "image": "pavlovelykyi/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "server",
        "client"
      ],
      "memory" : 128
    }
  ]
}